WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    ForthWindow:
   

<MainWindow>:
    name:"main"

    canvas.before:
        BorderImage:
            # BorderImage behaves like the CSS BorderImage
            border: 200, 10, 200, 10
            source: 'back.jpg'
            pos: self.pos
            size: self.size
    
    GridLayout:
        cols:1
        size: root.width , root.height
        #pos: 100, 100
        #font_size:'30sp'
        size_hint: 1,1

        BoxLayout:
            orientation:'vertical'
            size_hint: 1,0.2
        GridLayout:
            cols: 3
            size_hint: 1,0.2
            Label:
                text:""
                size_hint: .33,.2
            Button:
                color : 1,1,1,1
                text: "Controlar velocidade"
                on_release : app.root.current = "control"
                on_press: root.button1()
                size_hint: .33,.2
                #font_size: 10
            Label:
                text:""
                size_hint: .33,.2
        BoxLayout:
            orientation:'vertical'
            size_hint:(.1,.1)
        
        GridLayout:
            cols: 3
            size_hint: 1,.2            
            Label:
                text:""
                size_hint:.33,.2
            
            BoxLayout:
                orientation:'vertical'
                size_hint: .33,.2
                #padding: 200, 10, 200, 10

                Button:
                    text: "Ler velocidade atual"
                    on_release : app.root.current = "atual"
                    on_press : root.button2()
            Label:
                text:""
                size_hint:.33,.2        
        
        BoxLayout:
            orientation:'vertical'
            size_hint:(.1,.1)
        GridLayout:
            cols: 3
            size_hint: 1,.2
            Label:
                text:""
                size_hint: .33,.2
            Button:
                text: "Leituras Antigas"
                size_hint: .33,.2
                on_release : app.root.current = "antigo"
                on_press: root.button3()
            Label:
              
                text:""
                size_hint: .33,.2
        Label:
            text:""
            size_hint: 1,.8

<SecondWindow>:
    name:"control"

    canvas.before:
        BorderImage:
            
            border: 200, 10, 200, 10
            source: 'back.jpg'
            pos: self.pos
            size: self.size
    
    
    GridLayout:
        cols:1
        size_hint:1,1
        
        Label:
            text:""
            size_hint: 1,.3 
        
        GridLayout:
            cols:3
            size_hint: 1,1

            Label:
                text : "Velocidade"
                size_hint:.6,.1



            Button:
                text: "+"
                size_hint:(.2,.1)
                on_release: root.aumenta()

            Button:
                text: "-"
                size_hint: (.2,.1)
                on_release: root.diminui()
        #    
            Label:
                
                text : "Sentido"
                size_hint:(.6,.1)

  
            Button:
                text: "Horario"
                size_hint: (.2,.1)
                on_release : root.hora()

            Button:
                text: "Anti-horario"
                size_hint: (.2,.1)
                on_release : root.anti() 
        Label:
            
            text:""
            size_hint: (1,.5)
        Button:
            text:"Voltar"
            on_release : app.root.current = "main"
            size_hint: (1,.2)
